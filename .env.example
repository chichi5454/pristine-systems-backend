# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/bluecollar_company

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Rate Limiting
RATE_LIMIT_WINDOW_MS=15*60*1000 # 15 minutes
RATE_LIMIT_MAX=100 # limit each IP to 100 requests per windowMs

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Email Configuration (for future use)
# EMAIL_HOST=smtp.mailtrap.io
# EMAIL_PORT=2525
# EMAIL_USER=your_email_user
# EMAIL_PASS=your_email_password
# EMAIL_FROM=no-reply@bluecollar.com

# File Upload (for future use)
# FILE_UPLOAD_PATH=./public/uploads
# MAX_FILE_UPLOAD=2097152 # 2MB

# Logging
LOG_LEVEL=info
LOG_TO_FILE=false

# API Documentation (for future use)
# API_DOCS_PATH=/api-docs

# Session (for future use)
# SESSION_SECRET=your_session_secret
# SESSION_MAX_AGE=3600000 # 1 hour
